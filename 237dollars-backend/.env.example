# Server
NODE_ENV=development
PORT=3000
APP_NAME=237dollars
BASE_URL=http://localhost:3000

# Database
# REQUIRED: Application will not start without these
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=your-database-username
DATABASE_PASSWORD=your-database-password
DATABASE_NAME=your-database-name

# JWT Authentication
# REQUIRED: Application will not start without these secrets
# SECURITY: Generate strong random secrets (minimum 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_STRONG_RANDOM_SECRET_MINIMUM_32_CHARS
JWT_EXPIRATION=1h
JWT_REFRESH_SECRET=CHANGE_THIS_TO_DIFFERENT_STRONG_SECRET_MINIMUM_32_CHARS
JWT_REFRESH_EXPIRATION=30d

# Super Admin (for initial setup)
# REQUIRED for running super admin seed script
SUPER_ADMIN_EMAIL=admin@yourdomain.com
SUPER_ADMIN_PASSWORD=change-this-strong-password

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback
FRONTEND_URL=http://localhost:4200

# Email (Gmail)
# SECURITY: Never commit real email addresses to git
GMAIL_EMAIL=your-gmail-address@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password-here

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET_NAME=237dollars-bucket
AWS_S3_REGION=ap-south-1

# Telegram (optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_ADMIN_CHAT_ID=your-admin-chat-id

# CORS
CORS_ORIGIN=http://localhost:4200,http://localhost:3000

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000
